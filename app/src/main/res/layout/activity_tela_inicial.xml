<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".Tela_inicial">


    <ImageView
        android:id="@+id/logoApp"
        android:layout_width="409dp"
        android:layout_height="310dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="logo_desc"
        android:src="@drawable/logo"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textoBoasVindas"
        android:layout_width="135dp"
        android:layout_height="53dp"
        android:layout_below="@id/logoApp"
        android:layout_centerHorizontal="true"
        android:text="Bem vindo"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoDescricao"
        android:layout_width="304dp"
        android:layout_height="100dp"
        android:layout_below="@id/textoBoasVindas"
        android:layout_centerHorizontal="true"
        android:text="Neste quiz o participante irá descobrir qual herói ele se identifica!"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.664" />

    <Button
        android:id="@+id/botaoIniciar"
        android:layout_width="204dp"
        android:layout_height="66dp"
        android:layout_below="@id/textoDescricao"
        android:layout_centerHorizontal="true"

        android:text="Iniciar"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.795" />

</androidx.constraintlayout.widget.ConstraintLayout>
